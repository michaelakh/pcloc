<h1> search results </h1>
<% if @office.ntuples == 0 %>
  <h3> There was no Offices near <%= params['postcode'].upcase%></h3>
<% else %>
  <% @office.each do |office|%>
    <div class="list-group">
        <%= link_to office_path(office['id']), class: 'list-group-item office' do %>

          <h4 class="list-group-item-heading"><%= office['name'] %> - <%= office['distance'].to_f.round(2)%> miles away</h4>
          <p class="list-group-item-text"> 
            <%= office['street_ad'] %>
            <br>
            <%= office['county'] %>, <%= office['town_city'] %>, <%= office['postcode'] %>
            <br>
            <%= office['country'] %>
            <br>
            Phone no: <%= office['phone_no'] %>
            <br>
            Lon/lat: <%= "#{office['lon']}#{office['lat']}"%>
          </p>
        <% end %>
      </div>
  <% end %>
<% end %>
<%= link_to 'Back', offices_path %> 