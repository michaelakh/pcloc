<%= form_for(office) do |f| %>
  <% if office.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(office.errors.count, "error") %> prohibited this office from being saved:</h2>

      <ul>
      <% office.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name of office' %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :country %>
      <%= f.select :country, options_for_select(country_select_pairs, "United Kingdom"), {}, class: 'form-control' %>     
    </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :postcode %>
      <%= f.text_field :postcode, class: 'form-control', placeholder: 'postcode' %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :street_ad %>
      <%= f.text_field :street_ad, class: 'form-control', placeholder: 'full address' %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :town_city %>
      <%= f.text_field :town_city, class: 'form-control', placeholder: 'town or city' %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :phone_no %>
      <%= f.text_field :phone_no, class: 'form-control', placeholder: 'phone number' %>
      <small id="phoneHelp" class="form-text text-muted">We'll never share your phone number with anyone else.</small>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :county %>
     <%= f.text_field :county, class: 'form-control', placeholder: 'eg England' %>

    </div>
  </div>
  <div class="form-group">
    <div class="actions">
      <%= f.submit 'Create Office', class: 'btn btn-primary'  %>
    </div>
  </div>
<% end %>
